@page "/"
@inject GamePlayer game

@code {
  public string gameId { get; set; } = "";
  public string name { get; set; } = "Test_Alex";
  public async Task Register()
  {
    await game.Register(gameId, name);
  }
  private void refresh()
  {
    this.StateHasChanged();
  }
}

<PageTitle>Index</PageTitle>
<div class="container mx-auto">
  <div class="flex">

    <form @onsubmit:preventDefault="true" @onsubmit="Register">
      <div>
        <label>Game ID:</label>
        <input type="text" class="rounded bg-slate-600 p-1 m-1" @bind='gameId' />
      </div>
      <div>
        <label>Name:</label>
        <input type="text" class="rounded bg-slate-600 p-1 m-1" @bind='name' />
      </div>

      <button class="@(Styles.Btn)">
        Register for Game
      </button>
    </form>
    <div>
      <button class="@(Styles.Btn) m-5" onclick="refresh">
        refresh stats
      </button>
    </div>
  </div>
</div>

@if (game.Map != null)
{
  <div>
  Current Location: @game.Rover.CurrentLocation, Orientation: @game.Rover.Orientation, Target: @game.Target
</div>
  <ControlUI />
  <Map />
}